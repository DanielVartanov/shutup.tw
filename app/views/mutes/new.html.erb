<%= form_tag mute_path do |f| %>
  <%= label_tag 'Mute twitter of' %>
  <%= text_field_tag :twitter_name, nil, style: 'width: 100px' %>
  <%= select(:mute, :unmute_at,
      [
        ['for an hour', 1.hour.from_now],
        ['for a day', 1.day.from_now],
        ['for a week', 1.week.from_now],
        ['for a month', 1.month.from_now],
        ['until World Cup 2014 is over', 'Sun, 14 Jul 2014 00:00:00 +0000']
      ]
      ) %>
  <%= submit_tag 'Do it!' %>
<% end %>
